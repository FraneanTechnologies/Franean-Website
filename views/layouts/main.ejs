<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= description %>">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/avenir" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body class="bg-white font-avenir">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg fixed w-full z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-24">
                <div class="flex items-center">
                    <a href="/" class="flex items-center space-x-2">
                        <img src="/images/logo.png" alt="Franean Technologies Logo" class="h-16 w-auto">
                        <span class="text-2xl font-oswald font-medium">Franean Technologies</span>
                    </a>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">Home</a>
                    <a href="/about" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">About</a>
                    <a href="/services" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">Services</a>
                    <a href="/portfolio" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">Portfolio</a>
                    <a href="/blog" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">Blog</a>
                    <a href="/contact" class="text-gray-600 hover:text-red-600 px-3 py-2 rounded-md text-lg font-oswald">Contact</a>
                </div>
                <!-- Mobile menu button -->
                <div class="md:hidden flex items-center">
                    <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-red-600 focus:outline-none">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Mobile menu -->
        <div class="mobile-menu md:hidden bg-white shadow-lg overflow-hidden transition-all duration-300 ease-in-out" style="max-height: 0;">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
                <a href="/" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">Home</a>
                <a href="/about" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">About</a>
                <a href="/services" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">Services</a>
                <a href="/portfolio" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">Portfolio</a>
                <a href="/blog" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">Blog</a>
                <a href="/contact" class="block px-3 py-2 rounded-md text-base font-oswald text-gray-700 hover:text-red-600 hover:bg-gray-50 transition duration-150">Contact</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-24">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <div class="flex items-center mb-6">
                        <img src="/images/logo.png" alt="Franean Technologies Logo" class="h-24 w-auto mr-3">
                        <span class="text-2xl font-oswald font-medium">Franean Technologies</span>
                    </div>
                    <p class="text-gray-400">Transforming ideas into digital reality with cutting-edge web solutions.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="/about" class="text-gray-400 hover:text-red-500">About Us</a></li>
                        <li><a href="/services" class="text-gray-400 hover:text-red-500">Services</a></li>
                        <li><a href="/portfolio" class="text-gray-400 hover:text-red-500">Portfolio</a></li>
                        <li><a href="/blog" class="text-gray-400 hover:text-red-500">Blog</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Services</h3>
                    <ul class="space-y-2">
                        <li><a href="/services#web-design" class="text-gray-400 hover:text-red-500">Web Design</a></li>
                        <li><a href="/services#web-development" class="text-gray-400 hover:text-red-500">Web Development</a></li>
                        <li><a href="/services#ecommerce" class="text-gray-400 hover:text-red-500">E-Commerce</a></li>
                        <li><a href="/services#seo" class="text-gray-400 hover:text-red-500">SEO Optimization</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
                    <ul class="space-y-2">
                        <li class="text-gray-400"><i class="fas fa-phone mr-2"></i> +91 8258942111</li>
                        <li class="text-gray-400"><i class="fas fa-envelope mr-2"></i> info@franean.com</li>
                        <li class="text-gray-400"><i class="fas fa-map-marker-alt mr-2"></i> Tripura, India</li>
                    </ul>
                    <div class="mt-4 flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-red-500"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-gray-400 hover:text-red-500"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-gray-400 hover:text-red-500"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-gray-400 hover:text-red-500"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; <%= new Date().getFullYear() %> Franean Technologies. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Custom JavaScript -->
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            disable: 'mobile' // Disable AOS on mobile for better performance
        });

        // Mobile menu toggle with smooth animation
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuButton.addEventListener('click', function() {
            if (mobileMenu.style.maxHeight === '0px' || mobileMenu.style.maxHeight === '') {
                mobileMenu.style.maxHeight = mobileMenu.scrollHeight + 'px';
            } else {
                mobileMenu.style.maxHeight = '0';
            }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
                mobileMenu.style.maxHeight = '0';
            }
        });

        // Close mobile menu when window is resized to desktop view
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) { // md breakpoint
                mobileMenu.style.maxHeight = '0';
            }
        });
    </script>
</body>
</html> 